{
    "browser_action": {
        "default_title": "Plinfa",
        "default_popup": "popup/plinfa.html",
        "browser_style": true
    },
    "content_scripts": [{
        "matches": ["https://www.youtube.com/feed/subscriptions*"],
        "js": ["plinfa.js"],
        "run_at": "document_end",
        "all_frames": true
    }],
    "description": "Enables to subscribe to special formats on YT",
    "homepage_url": "https://tincher.de",
    "icons": {
      "48": "icons/baseline_label_black_48dp.png"
    },
    "manifest_version": 2,
    "name": "Plinfa",
    "page_action": {
        "browser_style": true,
        "default_icon":"icons/baseline_label_black_48dp.png",
        "default_title": "Plinfa",
        "show_matches": ["https://*.youtube.com/*"]
    },
    "permissions": ["storage"],
    "version": "0.2"
}
